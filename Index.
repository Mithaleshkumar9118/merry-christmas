<script>
function generate(){
  let name=document.getElementById("name").value;
  let photo=document.getElementById("photo").files[0];
  if(name==""||!photo){alert("Name aur photo dono dalo");return;}
  document.getElementById("showName").innerText="ğŸ "+name+" ğŸ";
  document.getElementById("showPhoto").src=URL.createObjectURL(photo);
  document.getElementById("result").style.display="block";
}

for(let i=0;i<40;i++){
  let snow=document.createElement("div");
  snow.className="snow";
  snow.innerHTML="â„";
  snow.style.left=Math.random()*100+"vw";
  snow.style.animationDuration=2+Math.random()*3+"s";
  document.body.appendChild(snow);
}
</script>

